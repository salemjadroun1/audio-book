<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hadlayout"
        android:layout_width="215dp"
        android:layout_height="307dp"
        android:background="#FAEEEE"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wajihabook"
            android:layout_width="wrap_content"
            android:layout_height="209dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/imageinterface" />

        <TextView
            android:id="@+id/name_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Interface Critique"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAEEEE"
            android:gravity="center"
            android:text="Florian Hadler"
            android:textColor="#C57D14"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:background="#FAEEEE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Description"
            android:textColor="#E45858"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_desription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#090707"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>